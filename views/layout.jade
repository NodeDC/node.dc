!!!
html(ng-app="nodeDC")
  head
    meta(charset='utf8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='A website for Node.DC')
    meta(name='author', content='Node.DC <@nodedc>')
    link( rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon")
    link( rel="icon" href="/images/favicon.ico" type="image/x-icon")
    base(href='/')
    title Node.DC
    != css('lib/bootstrap/dist/css/bootstrap.min.css')
    link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel="stylesheet")
    != css('css/app.min.css')
    // [if lt IE 9]
      script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
      script(src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js")
  body
    .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Node.DC
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='#/about') About
            li
              a(href="#/meetups") Meetups
            li
              a(href='#/contact') Contact
          form.navbar-form.navbar-right
            .form-group
              input#username.form-control(type='text' placeholder='Username')
            .form-group
              p |
            .form-group
              input#password.form-control(type='password' placeholder='Password')
            .form-group
              p |
            button.btn.btn-success(type='submit' ng-click='userSignin()') Sign in

    .container
      block body

      hr
      footer
        p
        | Node.DC Web App: v
        span(app-version)
        span.pull-right
          &copy; 2014 - Node.DC

    != js(src='lib/jquery/dist/jquery.min.js')
    != js(src='lib/angular/angular.min.js')
    != js(src='lib/angular-sanitize/angular-sanitize.min.js')
    != js(src='lib/angular-ui-router/release/angular-ui-router.min.js')
    != js(src='lib/angular-bootstrap/ui-bootstrap-tpls.min.js')
    script(src='/socket.io/socket.io.js')
    != js(src='ng/app.js')
    != js(src='ng/services.js')
    != js(src='ng/controllers.js')
    != js(src='ng/filters.js')
    != js(src='ng/directives.js')
